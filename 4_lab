#include <stdio.h>
#include <math.h>

char math(int a,int b, int c){
	float perimetr = a + b + c;
	float p = perimetr/2;
	float area = sqrt(p*(p-a)*(p-b)*(p-c));
	
	printf("Perimetr of tringle; %f",perimetr);
	printf("\nArea of tringle; %f %f",p,area);
}


int main(){
	int a,b,c;
	
	printf("Enter 3 digit\n");
	scanf("%d %d %d",&a,&b,&c);
	
	if(a > b + c || b > a + c || c > a + b){
		printf("Error");
	}else{
		math(a,b,c);
	}
	
	return 0;
}
