#include <stdio.h>
#include <ctype.h>
#include <string.h>



int main(){
	char spis[100];
	int i;

	printf("Enter string;\n");
	scanf("%99s",&spis);
	
	int len = strlen(spis);
	
	if(len > 80){
		printf("Error;");
	}else{
	for(i = 0; i < len; i++){
		if(spis[i] == 'a' || spis[i] == 'b'){
			spis[i] = toupper(spis[i]);
			} 
		printf("%c",spis[i]);
		}
	}
	return 0;
}
